<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffefffee"
    android:orientation="vertical"
    tools:context="com.cele.diplomskibasura.app.Postavke">

    <TextView
        android:text="Internal Address"
        android:id="@+id/acs_880_txt"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/edt_internal_ip"
            android:layout_marginLeft="10dp"
            android:text="192.168.0.100"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"></LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PORT"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            android:layout_marginStart="50dp"
            android:id="@+id/edt_internal_port"
            android:text="502"
            />


    </LinearLayout>




    <TextView
        android:text="External Address"
        android:id="@+id/sentron_txt"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/edt_external_ip"
            android:layout_marginLeft="10dp"
            android:text="192.168.0.100"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="match_parent"></LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PORT"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            android:layout_marginStart="50dp"
            android:id="@+id/edt_external_port"
            android:text="502"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"

        ></LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/btn_save_settings"
        android:text="Save"
        android:textColor="#ff38ff84"
        android:background="#ff367f52"
        android:textSize="30sp"
        android:layout_margin="20dp"/>
</LinearLayout>