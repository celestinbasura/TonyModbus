
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">


<ScrollView
    android:layout_height="0dp"
    android:layout_weight="0.8"
    android:layout_width="fill_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffa1c9ff"
    android:orientation="vertical"
    tools:context="com.cele.diplomskibasura.app.Postavke">

    <TextView
        android:text="Internal Address"
        android:id="@+id/acs_880_txt"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:paddingTop="7dp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:layout_marginTop="5sp">


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP"
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:layout_gravity="center"
            android:gravity="center"/>
        <EditText
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ff000000"
            android:id="@+id/edt_internal_ip1"
            android:layout_marginLeft="31dp"
            android:text="192"
            />
        <EditText
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/edt_internal_ip2"
            android:layout_marginLeft="0dp"
            android:text="168"
            />
        <EditText
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/edt_internal_ip3"
            android:textColor="#ff000000"
            android:layout_marginLeft="0dp"
            android:text="0"
            />
        <EditText
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:inputType="number"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ff000000"
            android:id="@+id/edt_internal_ip4"
            android:layout_marginLeft="0dp"
            android:text="100"
            />
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"></LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Port"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="#ff000000"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginStart="50dp"
            android:id="@+id/edt_internal_port"
            android:text="502"
            />


    </LinearLayout>





    <TextView
        android:text="External Address"
        android:id="@+id/sentron_txt"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:paddingTop="2dp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="IP     "
            android:textSize="20sp"
            android:textColor="#ff000000"
            android:paddingBottom="0dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:id="@+id/edt_external_ip"
            android:textColor="#ff000000"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="192.168.0.100"
            />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Port "
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:inputType="number"
            android:textColor="#ff000000"
            android:layout_marginStart="50dp"
            android:id="@+id/edt_external_port"
            android:text="502"
            />



        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SSID"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ff000000"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="50dp"
            android:id="@+id/edt_external_ssid_name"
            android:text="Home"
            />



    </LinearLayout>

    <TextView
        android:text="Camera Login"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:paddingTop="2dp"
        android:textColor="#ff000000"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Username"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ff000000"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="50dp"
            android:id="@+id/edt_camera_login"
            android:text=""
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:paddingTop="9dp"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:gravity="center"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ff000000"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="50dp"
            android:id="@+id/edt_camera_pass"
            android:text=""
            />



    </LinearLayout>

</LinearLayout>
</ScrollView>


<Button
android:layout_width="match_parent"
android:layout_height="60dp"
android:id="@+id/btn_save_settings"
android:text="Save"
android:textColor="#FFFFFF"
android:layout_gravity="center"
android:gravity="center"
android:background="@drawable/button_green_sel"
android:textSize="25sp"/>
</LinearLayout>