<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff15c610"
    tools:context="com.celeMC.tonymodbus.app.MainActivity">

    <TextView
        android:text="@string/selection"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFFFF"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_interior"
        android:layout_width="fill_parent"
        android:text="@string/interior"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_exterior"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/exterior"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/groups"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="20dp"  />
    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_connstatus"
        android:layout_marginTop="30dp"
        android:layout_height="80dp" />

</LinearLayout>
