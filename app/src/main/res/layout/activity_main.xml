<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ffefffee"
    tools:context="com.celeMC.tonymodbus.app.Activities.MainActivity">



    <Button
        android:id="@+id/btn_connect_command"
        android:text="Connect"
        android:layout_width="fill_parent"
        android:textColor="#ff38ff84"
        android:background="#ff367f52"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/btn_interior"
        android:layout_width="fill_parent"
        android:text="@string/interior"
        android:textSize="35sp"
        android:layout_height="80dp"
        android:textColor="#ff38ff84"
        android:background="#ff367f52"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_exterior"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/exterior"
        android:textSize="35sp"
        android:textColor="#ff38ff84"
        android:background="#ff367f52"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/groups"
        android:textSize="35sp"
        android:textColor="#ff38ff84"
        android:background="#ff367f52"
        android:layout_marginTop="20dp"  />
    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_connstatus"
        android:text="Press Connect"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:height="40dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"></LinearLayout>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.11"
            android:layout_height="40dp"
            android:id="@+id/btn_info"
            android:background="@drawable/get_info"

           />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"></LinearLayout>

        </LinearLayout>


</LinearLayout>
