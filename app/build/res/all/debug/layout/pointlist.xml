<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".ListActivity" >

    <TextView
        android:id="@+id/txt_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Multi Touch Listview"
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/marker"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="2dp"
        android:background="#ff000000"
        android:layout_below="@+id/txt_listname"
        ></LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/marker"
        android:layout_marginTop="15dp"
        android:cacheColorHint="#00000000" />

</RelativeLayout><!-- From: file:/Users/celestinbasura/TonyModbus/app/src/main/res/layout/pointlist.xml -->