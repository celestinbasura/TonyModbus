<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ListActivityNew" >

    <ImageButton
        android:id="@+id/img_state"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/txt_pointname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_toRightOf="@id/img_state"
        android:text="Point Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/txt_fixed_value"
        android:layout_width="60dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="Value:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/txt_pointname"
        android:layout_toRightOf="@id/img_state"/>

    <TextView
        android:id="@+id/txt_pointaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/txt_pointname"
        android:layout_toRightOf="@id/txt_fixed_value"
        android:layout_marginTop="7dp"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_timer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:background="#ff8594ff"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Timer"
        android:textSize="25sp"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/txt_fixed_timer"
        android:layout_width="60dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="Timer:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/txt_fixed_value"
        android:layout_toRightOf="@id/img_state"/>

    <TextView
        android:id="@+id/txt_timervalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_fixed_timer"
        android:layout_below="@+id/txt_pointaddress"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="timer value" />

</RelativeLayout>


