<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff15c610"
    tools:context="com.celeMC.tonymodbus.app.Activities.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_ip"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="IP address"/>

        <EditText
            android:id="@+id/edit_text_port"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="port"/>



        </LinearLayout>

    <Button
        android:id="@+id/btn_connect_command"
        android:text="Connect"

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/btn_interior"
        android:layout_width="fill_parent"
        android:text="@string/interior"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_exterior"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/exterior"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="@string/groups"
        android:textSize="35sp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="20dp"  />
    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_connstatus"
        android:text="Press Connect"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="30dp" />

</LinearLayout>
