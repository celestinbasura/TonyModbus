<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff383838"
    tools:context="com.celeMC.tonymodbus.app.Activities.MainActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.05"></LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.27"
    android:orientation="horizontal">


    <Button
        android:id="@+id/btn_interior"
        android:layout_width="0dp"
        android:text="@string/interior"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:textSize="13sp"

        android:textColor="#fff7fff6"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:layout_margin="5dp"  />

    <Button
        android:id="@+id/btn_exterior"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:layout_margin="5dp"
        android:text="@string/exterior"
        android:textSize="13sp"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#fff7fff6"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:text="@string/groups"
        android:layout_margin="5dp"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:textSize="13sp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#fff7fff6"

        android:layout_marginTop="20dp"  />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.27"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_alarms"
            android:layout_width="0dp"
            android:text="Alarms"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:textSize="13sp"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"

            android:layout_margin="5dp"
            android:layout_marginTop="20dp"   />

        <Button
            android:id="@+id/btn_all_active"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:layout_margin="5dp"
            android:text="Activated"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:textSize="13sp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"
            android:layout_marginTop="20dp"   />

        <Button
            android:id="@+id/btn_reserved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Reserved"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:textSize="13sp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"

            android:layout_marginTop="20dp"  />




    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.15"
    android:padding="0dp"
    android:layout_margin="10dp"
    android:background="#ff1e3f12">

    <Button
        android:id="@+id/btn_connect_command"
        android:text="Connect"
        android:layout_width="fill_parent"
        android:textColor="#fff7fff6"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        />

</LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_connstatus"
        android:text="Press Connect"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.10" />


    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_phone_ip"
        android:text="Phone IP: "
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.08" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"></LinearLayout>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_info"
            android:background="@drawable/get_info"

           />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"></LinearLayout>

        </LinearLayout>


</LinearLayout>
