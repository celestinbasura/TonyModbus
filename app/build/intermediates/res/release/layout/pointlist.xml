<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".ListActivity" >

    <LinearLayout
        android:id="@+id/marker"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#ff367f52"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txt_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Multi Touch Listview"
        android:textColor="#ff38ff84"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/marker2"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="5dp"
        android:background="#ff000000" >
    </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff4b8325"
        android:layout_below="@+id/marker"

        android:cacheColorHint="#00000000" />

</RelativeLayout><!-- From: file:/Users/celestinbasura/AndroidStudioProjects/TonyModbus/app/src/main/res/layout/pointlist.xml -->