<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/list_background"

    tools:context=".ListActivityNew" >

    <ImageButton
        android:id="@+id/img_state"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/txt_pointname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_toRightOf="@id/img_state"
        android:text="Point Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <ImageButton
        android:id="@+id/btn_timer"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/timer_icon" />

    <TextView
        android:id="@+id/txt_fixed_timer"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Timer:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/txt_pointname"
        android:textSize="25sp"
        android:layout_toRightOf="@id/img_state"/>

    <TextView
        android:id="@+id/txt_timervalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/txt_fixed_timer"
        android:layout_below="@+id/txt_pointname"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="timer value" />

</RelativeLayout>


