<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff26408e"
    tools:context="com.celeMC.tonymodbus.app.Activities.MainActivity">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.05"></LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.27"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">


    <Button
        android:id="@+id/btn_interior"
        android:layout_width="0dp"
        android:text="@string/interior"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:textSize="16dp"
        android:elevation="1000dp"
        android:textColor="#fff7fff6"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:layout_margin="5dp"  />

    <Button
        android:id="@+id/btn_exterior"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:layout_margin="5dp"
        android:text="@string/exterior"
        android:elevation="1000dp"
        android:textSize="16dp"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#fff7fff6"
        android:layout_marginTop="20dp"   />

    <Button
        android:id="@+id/btn_groups"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:text="@string/groups"
        android:elevation="1000dp"
        android:layout_margin="5dp"
        android:drawableTop="@drawable/home_white"
        android:paddingTop="20dp"
        android:textSize="16dp"
        android:gravity="bottom|center_horizontal"
        android:textColor="#fff7fff6"

        android:layout_marginTop="20dp"  />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.27"
        android:layout_marginBottom="10dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_alarms"
            android:layout_width="0dp"
            android:text="Alarms"
            android:elevation="1000dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:textSize="16dp"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"

            android:layout_margin="5dp"
            android:layout_marginTop="20dp"   />

        <Button
            android:id="@+id/btn_all_active"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:text="Activated"
            android:elevation="1000dp"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:textSize="16dp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"
            android:layout_marginTop="20dp"   />

        <Button
            android:id="@+id/btn_reserved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:elevation="1000dp"
            android:text="Reticulation"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/home_white"
            android:paddingTop="20dp"
            android:textSize="16dp"
            android:gravity="bottom|center_horizontal"
            android:textColor="#fff7fff6"

            android:layout_marginTop="20dp"  />




    </LinearLayout>


    <Button
        android:id="@+id/btn_connect_command"
        android:text="Waiting..."
        android:textSize="25sp"
        android:layout_width="fill_parent"
        android:textColor="#fff7fff6"
        android:layout_margin="10dp"
        android:clickable="false"
        android:background="@drawable/button_green_sel"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        />


    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_connstatus"
        android:text="Getting connection info"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#ff000000"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.10" />


    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/txt_phone_ip"
        android:text="Phone IP: "
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#ff000000"
        android:layout_marginBottom="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.08" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            ></LinearLayout>


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/btn_camera"
            android:background="@drawable/camera"
            android:layout_marginRight="60dp"

            />


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_status"
            android:background="@drawable/cloud_status"
            android:layout_marginRight="60dp"

            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btn_info"
            android:background="@drawable/get_info"

           />
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
           ></LinearLayout>

        </LinearLayout>


</LinearLayout>
